<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    controllerName="genaiprojnew.controller.DetailDetail">

    <m:Page id="detailDetailPage" class="sapUiContentPadding">

        <!-- Top white header area -->
        <m:customHeader>
            <m:Toolbar>
                <m:Button
                    icon="sap-icon://nav-back"
                    type="Back"
                    press="onNavBack"
                    tooltip="Go Back"
                />
                <m:Title text="AI Response" level="H2" />
                <m:ToolbarSpacer />
            </m:Toolbar>
        </m:customHeader>

        <!-- Scrollable TextArea inside ScrollContainer -->
        <m:content>
            <m:VBox class="sapUiSmallMarginBegin sapUiMediumMarginEnd">
                <!-- <m:ScrollContainer height="400px" width="100%" vertical="true" focusable="true"> -->
                    <m:TextArea
                        id="aiResponseArea"
                        value="AI Response for tab: coderem"
                        width="100%"
                        growing="false"
                        rows="20"
                        height="400px"
                    />
                <!-- </m:ScrollContainer> -->
            </m:VBox>
        </m:content>

    </m:Page>
</mvc:View>
